{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "build",

    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"]
}